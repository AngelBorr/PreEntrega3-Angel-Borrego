<div class="containerProducts">
    
    <h2>Lista de Productos</h2>
    <button class='btnVolver btn btn-primary'>Volver</button>
    <button class='btnCreateProductsPage btn btn-success'>Crear Producto</button>
    <br>
    <br>
    <table class='table table-striped'>
        <thead>
            <tr>
                <th>IdProd</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Code</th>
                <th>Stock</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td class="tdDescription">{{this.description}}</td>
                <td>$ {{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td><button class="btnDeleteroduct btn btn-danger" data-id={{this._id}}  onClick= >Eliminar</button></td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <nav aria-label="Page navigation example">
        <ul class="pagination">
            {{#if hasPrevPage}}
                <li class="page-item"><a class="page-link" href="/adminProducts?page={{prevPage}}">Anterior</a></li>
            {{/if}}
            {{#if hasNextPage}}
                <li class="page-item"><a class="page-link" href="/adminProducts?page={{nextPage}}">Siguiente</a></li>
            {{/if}}
        </ul>
    </nav>   
    
    
    

</div>

<script src="/js/adminProductPage.js"></script>