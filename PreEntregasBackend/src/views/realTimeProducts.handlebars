<div class="container">
    <div class="column containerForm">
        <form class="formAddProducts" action="/api/products" method="post">
            <div class="divForm">
                <label class="form-label" for="title">Title:</label>
                <input class="formProduct form-control" type="text" id="title" name="title"><br><br>
            </div>
            <div class="divForm">
                <label class="form-label" for="description">Description:</label>
                <input class="formProduct form-control" type="text" id="description" name="description"><br><br>
            </div>
            <div class="divForm">
                <label class="form-label" for="price">Price:</label>
                <input class="formProduct form-control" type="number" id="price" name="price"><br><br>
            </div>        
            <div class="divForm">
                <label class="form-label" for="code">Code:</label>
                <input class="formProduct form-control" type="text" id="code" name="code"><br><br>
            </div>
            <div class="divForm">
                <label class="form-label" for="stock">Stock:</label>
                <input class="formProduct form-control" type="number" id="stock" name="stock"><br><br>
            </div>
            <div class="divForm">
                <label class="form-label" for="category">Category:</label>
                <select class="form-select" type="text" id="category" name="category">
                    <option value="">--</option>
                    <option value="indumentaria">Indumentaria</option>
                    <option value="calzado">Calzado</option>
                    <option value="accesorios">Accesorios</option>
                </select><br><br>
            </div>
            <div class="divForm">
                <label class="form-label" for="status">Status:</label>
                <select class="form-select" type="boolean" id="status" name="status">
                    <option value="">--</option>
                    <option value="true">True</option>
                    <option value="false">False</option>            
                </select><br><br>
            </div>
            <div class="divForm">
                <label class="form-label" for="thumbnail">Thumbnail:</label>
                <input class="formThumbnail" type="text" id="thumbnail" name="thumbnail" accept=".jpg, .jpeg, .png"><br><br>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
            
        </form>
    </div>
    <div class="column containerProducts">
        <h1>Lista de Productos</h1>
        <table class='table table-striped'>
            <thead>
                <tr>
                    <th>IdProd</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Code</th>
                    <th>Stock</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.title}}</td>
                    <td class="tdDescription">{{this.description}}</td>
                    <td>$ {{this.price}}</td>
                    <td>{{this.code}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.category}}</td>
                    <td><button id={{this.id}} class="btn btn-danger" onClick="">Eliminar</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script src="../../node_modules/socket.io/socket.io.js"></script>
<script src="../public/js/index.js"></script>