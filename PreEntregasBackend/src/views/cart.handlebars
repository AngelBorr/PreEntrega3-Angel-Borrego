<div class="containerProducts">    
    <h1>Carritos de compras: {{cart._id}}</h1>
    <br>
    <button class='btnComprar btn btn-primary'>Comprar</button>
    <br>
    <br>    
    <table class='table table-striped'>
        <thead>
            <tr>
                <th>IdProd</th>
                <th>Title</th>
                <th>Category</th>                
                <th>Price/unit</th>
                <th>Quantity</th>
                <th>SubTotal</th>
                
            </tr>
        </thead>
        <tbody>
            {{#if cart.products.length}}
                {{#each cart.products}} 
                <tr>
                    <td>{{this.product._id}}</td>
                    <td>{{this.product.title}}</td>
                    <td>{{this.product.category}}</td>
                    <td>$ {{this.product.price}}</td>
                    <td>{{this.quantity}}</td>
                    <td>$ {{this.subtotal}}</td>
                    
                    <td><button class="btnDeleteProductCart btn btn-danger" data-id={{this.product._id}}  onClick= >Eliminar</button></td>
                </tr>                
                {{/each}}
            {{/if}}
            <tr>
                    <td class="tableVacio"></td>
                    <td class="tableVacio"></td>
                    <td class="tableVacio"></td>
                    <td class="tableVacio"></td>
                    <td class="tableTotal">Total</td>
                    <td>$ {{cart.total}}</td>
            </tr>            
        </tbody>
    </table>
    <br>
    <button class='btnContinueBuing btn btn-success'>Seguir Comprando</button>
    <br>    
</div>

<script src="/js/cart.js"></script>